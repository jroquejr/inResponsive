{
  "name": "(in) Responsive",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Inspirado por: http://responsive.victorcoulon.fr/",
  "homepage_url": "http://inresponsive.jr2.in",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
      "template/page.html",
      "js/app.js",
      "css/app.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}